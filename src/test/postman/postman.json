{
  "info": {
    "name": "Credentials API - Fully Fixed",
    "_postman_id": "12345678-1234-1234-1234-123456789012",
    "description": "Fully fixed version of the Credentials API tests with unique users",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth – Register New User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:8000/auth/register", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth","register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\": \"{{firstname}}\",\n  \"lastname\": \"{{lastname}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"username\": \"{{username}}\",\n  \"phone\": \"{{phone}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Generate unique user info",
              "const rand = Math.floor(Math.random() * 1000000);",
              "pm.environment.set('firstname', 'Alice');",
              "pm.environment.set('lastname', 'Johnson');",
              "pm.environment.set('email', `alice${rand}@example.com`);",
              "pm.environment.set('username', `alice${rand}`);",
              "pm.environment.set('password', `StrongPass${rand}!`);",
              "pm.environment.set('phone', `1555${1000000 + rand}`);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 201 for successful registration', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "try {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.data && jsonData.data.accessToken) {",
              "        pm.environment.set('accessToken', jsonData.data.accessToken);",
              "        pm.test('Response contains accessToken', () => {",
              "            pm.expect(jsonData.data.accessToken).to.exist;",
              "        });",
              "    } else {",
              "        console.warn('No accessToken returned');",
              "    }",
              "} catch (e) {",
              "    console.warn('Response is not valid JSON or missing data');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth – Login Existing User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:8000/auth/login", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth","login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 for successful login', function () {",
              "    pm.expect(pm.response.code).to.equal(200);",
              "});",
              "try {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.data && jsonData.data.accessToken) {",
              "        pm.environment.set('accessToken', jsonData.data.accessToken);",
              "        pm.test('Response contains accessToken', () => {",
              "            pm.expect(jsonData.data.accessToken).to.exist;",
              "        });",
              "    } else {",
              "        console.warn('No accessToken returned');",
              "    }",
              "} catch (e) {",
              "    console.warn('Response is not valid JSON or missing data');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Password Reset – Request Reset Link",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:8000/auth/password/reset-request", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth","password","reset-request"] },
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\" }" }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Password reset request returns 200', function () {",
            "    pm.expect(pm.response.code).to.equal(200);",
            "});"
          ]
        }
      ]
    },
    {
      "name": "Password Reset – Confirm Reset with Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:8000/auth/password/reset", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth","password","reset"] },
        "body": { "mode": "raw", "raw": "{ \"token\": \"example-reset-token\", \"password\": \"{{password}}\" }" }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Password reset returns success or invalid token', function () {",
            "    pm.expect(pm.response.code).to.be.oneOf([200, 400, 500]);",
            "});"
          ]
        }
      ]
    },
    {
      "name": "Verification – Get Supported Carriers",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
        "url": { "raw": "http://localhost:8000/auth/verify/carriers", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["auth","verify","carriers"] }
      },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Carriers endpoint returns list', function () {",
            "    pm.expect(pm.response.code).to.equal(200);",
            "});"
          ]
        }
      ]
    },
    {
      "name": "JWT Test – Public Endpoint",
      "request": { "method": "GET", "header": [], "url": { "raw": "http://localhost:8000/jwt_test", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["jwt_test"] } },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('JWT test endpoint is reachable', function () {",
            "    pm.expect(pm.response.code).to.equal(200);",
            "});"
          ]
        }
      ]
    },
    {
      "name": "Documentation – Index Route",
      "request": { "method": "GET", "header": [], "url": { "raw": "http://localhost:8000/doc", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["doc"] } },
      "event": [
        {
          "listen": "test",
          "script": [
            "pm.test('Documentation index loads successfully', function () {",
            "    pm.expect(pm.response.code).to.be.oneOf([200, 302]);",
            "});"
          ]
        }
      ]
    }
  ]
}
