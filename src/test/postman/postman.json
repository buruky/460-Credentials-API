{
  "info": {
    "name": "Credentials API – Open Routes Test Suite",
    "_postman_id": "12345678-abcd-efgh-ijkl-9876543210ab",
    "description": "Test suite with proper token handling",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth – Register New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"TestPassword123\",\n  \"name\": \"Alice\",\n  \"lastname\": \"Johnson\",\n  \"username\": \"alicej\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200 or 201 for successful registration\", function () {",
              "    pm.expect(pm.response.code === 200 || pm.response.code === 201).to.be.true;",
              "});",
              "",
              "// Save accessToken for subsequent requests",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"accessToken\", jsonData.data.accessToken);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth – Login Existing User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"TestPassword123\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200 for successful login\", function () {",
              "    pm.expect(pm.response.code).to.eql(200);",
              "});",
              "// Optionally update accessToken if login returns a new one",
              "var jsonData = pm.response.json();",
              "if(jsonData.data && jsonData.data.accessToken) {",
              "    pm.environment.set(\"accessToken\", jsonData.data.accessToken);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
