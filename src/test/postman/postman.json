    {
      "name": "Auth – Register New User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://localhost:8000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\": \"{{firstname}}\",\n  \"lastname\": \"{{lastname}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"username\": \"{{username}}\",\n  \"phone\": \"{{phone}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Generate unique user info",
              "const rand = Math.floor(Math.random() * 1000000);",
              "pm.environment.set('firstname', 'Alice');",
              "pm.environment.set('lastname', 'Johnson');",
              "pm.environment.set('email', `alice${rand}@example.com`);",
              "pm.environment.set('username', `alice${rand}`);",
              "pm.environment.set('password', `StrongPass${rand}!`);",
              "pm.environment.set('phone', `1555${1000000 + rand}`);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 201 for successful registration', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "try {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.data && jsonData.data.accessToken) {",
              "        pm.environment.set('accessToken', jsonData.data.accessToken);",
              "        pm.test('Response contains accessToken', () => {",
              "            pm.expect(jsonData.data.accessToken).to.exist;",
              "        });",
              "    } else {",
              "        console.warn('No accessToken returned');",
              "    }",
              "} catch (e) {",
              "    console.warn('Response is not valid JSON or missing data');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
